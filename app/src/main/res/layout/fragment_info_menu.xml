<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Registration_page.Fragments.Info_menu">


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/buttonExpert"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="Эксперт"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tableLayout" />

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/buttonGuest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Гость" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/buttonSpeaker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Спикер" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/buttonInvestor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Инвестор" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/buttonSponsor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Спонсор" />
        </TableRow>

    </TableLayout>
</androidx.constraintlayout.widget.ConstraintLayout>